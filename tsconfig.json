{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // enables you to import relative to this folder
    "paths": {
      "src/*": [
        "*"
      ],
      "routes/*": [
        "routes/*"
      ],
      "data/*": [
        "data/*"
      ],
      "components/*": [
        "components/*"
      ],
      "containers/*": [
        "containers/*"
      ],
      "store/*": [
        "store/*"
      ],
      "api/*": [
        "api/*"
      ],
      "layouts/*": [
        "layouts/*"
      ],
      "models/*": [
        "models/*"
      ],
      "util/*": [
        "util/*"
      ]
    },
    "jsx": "react",
    "lib": [
      "es6",
      "es2015",
      "es2017",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "rootDir": "src",
    "strictNullChecks": true,
    "strict": true,
    "pretty": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2016"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "razzle.config.js"
  ],
  "types": [
    "typePatches",
    "node",
    "webpack-env"
  ]
}